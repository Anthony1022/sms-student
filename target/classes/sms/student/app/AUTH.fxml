<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" alignment="CENTER" spacing="15.0" styleClass="auth-container"
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="sms.student.app.AuthController"
      stylesheets="@style.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="Enter Student Key" styleClass="auth-header"/>
        <TextField fx:id="keyField" promptText="Enter your key here" styleClass="auth-input"/>
        <Label fx:id="errorLabel" styleClass="error-label"/>
        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit" styleClass="action-button"/>
    </children>
</VBox>
